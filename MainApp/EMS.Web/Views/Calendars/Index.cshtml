@model IEnumerable<EMS.Domain.DTO.CalendarEventDTO>

@{
    ViewData["Title"] = "Calendar";
}

<h1>Calendar</h1>

<table class="table">
    <thead>
        <tr>
            <th>Event</th>
            <th>Date</th>
            <th>Location</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.Name</td>
                <td>@eventItem.AddedDate.ToShortDateString()</td>
                <td>@eventItem.Location</td>
                <td>@eventItem.Status</td>
            </tr>
        }
    </tbody>
</table>
