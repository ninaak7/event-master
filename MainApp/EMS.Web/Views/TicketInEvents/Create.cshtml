@model EMS.Domain.Models.TicketInEvent

@{
    ViewData["Title"] = "Create Ticket In Event";
}

<h1>Create Ticket In Event</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.EventId" />

            <select asp-for="TicketId">
                @foreach (var item in ViewData["Tickets"] as List<EMS.Domain.Models.Ticket>)
                {
                    <option value="@item.Id">@item.Type</option>
                }
            </select>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Details" asp-controller="Events" asp-route-id="@Model.EventId" class="btn btn-info">Back to Event</a>
            </div>
        </form>
    </div>
</div>

