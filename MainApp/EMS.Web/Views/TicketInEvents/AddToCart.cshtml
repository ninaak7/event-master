@{
}

@model EMS.Domain.Models.TicketInShoppingCart

@{
    ViewData["Title"] = "Add Tickets To Shopping Cart";
}

<h1>Add Tickets To Shopping Cart</h1>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddToCartConfirmed">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="TicketId" class="form-control" />
            <input type="hidden" asp-for="ShoppingCartId" class="form-control" />
            <div class="form-group">
                <input type="submit" value="Add to cart" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>
