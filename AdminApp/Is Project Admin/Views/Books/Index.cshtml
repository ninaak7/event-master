@model IEnumerable<Is_Project_Admin.Models.Book>

@{
    ViewData["Title"] = "All Books";
}

<h1 class="text-center my-4">📚 All Books</h1>

<div class="table-responsive">
    <table class="table table-striped table-bordered shadow-lg">
        <thead class="thead-dark">
            <tr class="text-center">
                <th>@Html.DisplayNameFor(model => model.BookName)</th>
                <th>@Html.DisplayNameFor(model => model.BookDescription)</th>
                <th>Cover</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th>@Html.DisplayNameFor(model => model.Rating)</th>
                <th>@Html.DisplayNameFor(model => model.Author)</th>
                <th>@Html.DisplayNameFor(model => model.Publisher)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null || !Model.Any())
            {
                <tr>
                    <td colspan="8" class="text-center text-muted font-italic py-3">
                        No available books!
                    </td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr class="text-center align-middle">
                        <td>@Html.DisplayFor(modelItem => item.BookName)</td>
                        <td class="text-truncate" style="max-width: 250px;" title="@item.BookDescription">
                            @Html.DisplayFor(modelItem => item.BookDescription)
                        </td>
                        <td>
                            <img src="@item.BookImage" alt="Book Cover" class="img-thumbnail shadow-sm" style="max-width: 80px; height: auto;">
                        </td>
                        <td class="fw-bold">$@Html.DisplayFor(modelItem => item.Price)</td>
                        <td>⭐ @Html.DisplayFor(modelItem => item.Rating)</td>
                        <td>@Html.DisplayFor(modelItem => item.Author.FullName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Publisher.PublisherName)</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm custom-btn">
                                Details
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<style>
    .table {
        border-radius: 10px;
        overflow: hidden;
    }

    .thead-dark {
        background-color: #343a40;
        color: white;
    }

    .custom-btn {
        background-color: darkred;
        color: white;
        transition: all 0.3s ease;
    }

        .custom-btn:hover {
            background-color: gray;
            color: white;
        }

    .img-thumbnail {
        border-radius: 8px;
    }
</style>
